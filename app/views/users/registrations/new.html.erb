
<div class = "row">
  <div class = "col-md-6 signUp">
    <p><%= image_tag("signUp.jpg") %></p>
  </div>
  
  <div class = "col-md-3">
    <div class = "col-md-12 text-center">
      <h2>InstaClone</h2>
    </div>

    <div class = "col-md-12 text-center">
      <h4> Sign up to see photos and videos from your friends. </h4>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>


      <div class="field signUp text-center">
        <%= f.text_field :name, placeholder: "Username"%>
      </div>

      <div class="field signUp text-center">
        <%= f.text_field :description, placeholder: "Profile Description" %>
      </div>


      <div class="field signUp text-center">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>

      <div class="field signUp text-center">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>

      <div class="field signUp text-center">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter password again" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Sign up", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
